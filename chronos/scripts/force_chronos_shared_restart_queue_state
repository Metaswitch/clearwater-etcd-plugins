set -ue

local_site_name=site1
. /etc/clearwater/config

if [ $# -ne 0 ]
then
  echo "Usage: force_chronos_shared_restart_queue_state"
  exit 1
fi

/usr/share/clearwater/clearwater-queue-manager/env/bin/python \
  /usr/share/clearwater/clearwater-queue-manager/scripts/force_queue_state.py \
    "${management_local_ip:-$local_ip}" \
    "$local_site_name" \
    "apply_chronos_shared_config"
